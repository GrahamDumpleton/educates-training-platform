#!/bin/bash

cd /home/eduk8s

if [ -d /home/eduk8s/workshop ]; then
    for script in /home/eduk8s/workshop/setup.d/*.sh; do
        if [ -x "$script" ]; then
            $script
        fi
    done
else
    if [ -d /opt/workshop ]; then
        for script in /opt/workshop/setup.d/*.sh; do
            if [ -x "$script" ]; then
                $script
            fi
        done
    fi
fi
