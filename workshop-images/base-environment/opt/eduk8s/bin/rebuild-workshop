#!/bin/bash

SETUP_FAILED=
SETUP_LOGFILE=$HOME/.eduk8s/setup-scripts.log
SETUP_FAILED=$HOME/.eduk8s/setup-scripts.failed

cd $HOME

mkdir -p $HOME/.eduk8s

rm -f $SETUP_FAILED

touch $SETUP_LOGFILE

for script in /opt/workshop/setup.d/*.sh; do
    if [ -x "$script" ]; then
        echo "Executing: $script" | tee -a $SETUP_LOGFILE
        (sh -x $script 2>&1 || touch $SETUP_FAILED || true) | tee -a $SETUP_LOGFILE
    fi
done


for script in $HOME/workshop/setup.d/*.sh; do
    if [ -x "$script" ]; then
        echo "Executing: $script" | tee -a $SETUP_LOGFILE
        (sh -x $script 2>&1 || touch $SETUP_FAILED || true) | tee -a $SETUP_LOGFILE
    fi
done
