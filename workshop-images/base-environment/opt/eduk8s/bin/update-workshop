#!/bin/bash

if [ -f /opt/eduk8s/config/downloads.yaml ]; then
  vendir-workshop
else
  if [ ! -f /home/eduk8s/.eduk8s/workshop-files.txt ]; then
    echo "Error: Workshop has not previously been downloaded." >&2
    exit 1
  fi

  download-workshop --force `cat /home/eduk8s/.eduk8s/workshop-files.txt`
fi

rebuild-workshop
